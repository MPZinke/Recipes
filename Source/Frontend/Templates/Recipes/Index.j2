{% extends "Header.j2" %}
{% block body %}
	<title>
		Recipes
	</title>
	<h3
	  style="padding-top: 8px;"
	>
		Recipes
	</h3>
	<table
	  class="table table-dark table-striped"
	>
		<thead>
			<tr>
				<th>
					Recipe
				</th>
				<th>
					Rating
				</th>
				<th>
					Total Time
				</th>
			</tr>
		</thead>
		<tbody>
			{% for recipe in recipes %}
				<tr>
					<td>
						<a
						  href="/recipe/{{ recipe.name() }}"
						>
							{{ recipe.name() }}
						</a>
					</td>
					<td>
						{{ recipe.rating() }}
					</td>
					<td>
						{{ recipe.total_time() }}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
