{% extends "Header.j2" %}
{% block body %}
	<script>
		var Recipe = {};  // Initialize namespace `Recipe`
		Recipe.NEW_RECIPE = {
			notes: "",
			prep_time: 0,
			cook_time: 0,
			total_time: 0,
			Instructions: {},
			RecipeIngredients: {}
		};
	</script>

	<input
	  id="Recipe-new_Recipe_json-div"
	  name="Recipe-new_Recipe_json-div"
	  hidden
	/>

	<form>
		{% include("New/Recipe/Name.j2") %}
		{% include("New/Recipe/Url.j2") %}
		{% include("New/Recipe/Servings.j2") %}
		{% include("New/Recipe/Rating.j2") %}
		{% include("New/Recipe/PrepTime.j2") %}
		{% include("New/Recipe/CookTime.j2") %}
		{% include("New/Recipe/TotalTime.j2") %}
		{% include("New/Recipe/Notes.j2") %}
	</form>

	{% include("New/Recipe/Instructions/Index.j2") %}
	{% include("New/Recipe/RecipeIngredients/Index.j2") %}

	<button
	  type="button"
	  class="btn btn-primary"
	  onclick="Recipe.submit();"
	>
		Add Recipe
	</button>

<script>


	Recipe.uuid4 =
	function uuid4()
	{
		return "xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx".replace(/[xy]/g,
			function(c)
			{
				const r = Math.random() * 16 | 0;
				const v = c === 'x' ? r : (r & 0x3 | 0x8);
				return v.toString(16);
			}
		);
	};


	Recipe.format =
	function format()
	{
		var new_recipe_copy = JSON.parse(JSON.stringify(Recipe.NEW_RECIPE));
		new_recipe_copy.Instructions = Object.values(new_recipe_copy.Instructions);

		// If the instructions are sections (ie dictionaries)
		if(new_recipe_copy.Instructions.length && typeof new_recipe_copy.Instructions[0] != "string")
		{
			let expanded_instructions = {};
			new_recipe_copy.Instructions.forEach(
				(section) => {
					expanded_instructions[section.name] = Object.values(section.instructions);
				}
			);

			new_recipe_copy.Instructions = expanded_instructions;
		}

		new_recipe_copy.RecipeIngredients = Object.values(new_recipe_copy.RecipeIngredients);

		return new_recipe_copy;
	};


	Recipe.submit =
	function submit()
	{
		const format = Recipe.format();

		var xmlhttp = new XMLHttpRequest();
		xmlhttp.open("POST", "/api/recipe/new", false);
		xmlhttp.setRequestHeader("Content-Type", "application/json");
		xmlhttp.send(JSON.stringify(format));
		if(xmlhttp.status == 400)
		{
			return alert('There was an error 400');
		}
		else if(xmlhttp.status != 200)
		{
			return alert('add_new_recipe_ingredient_html::something else other than 200 was returned');
		}

		console.log("Success");
	};


	Recipe.validate =
	function validate()
	{

	};
</script>

{% endblock %}
