<div class="boxed">
	<table>
		<tr>
			<td colspan="2">
				{% include "New/RecipeIngredient/Ingredient/Select.j2" %}
				<br/>
				— OR —
				<br/>
				{% include "New/RecipeIngredient/Ingredient/Button.j2" %}
			</td>
		</tr>
		<tr>
			<td colspan="2">
			</td>
		</tr>
		<tr>
			<td>
				Amount
			</td>
			<td>
				<input name="ingredient_amount-input-"
				  id="ingredient_amount-input-" type="text"
				/>
			</td>
		</tr>
		<tr>
			<td>
				Units
			</td>
			<td>
				(Singular)
				<input name="ingredient_units_singular-input-"
				  id="ingredient_units_singular-input-" type="text"
