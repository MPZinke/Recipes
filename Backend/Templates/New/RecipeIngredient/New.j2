				<input name="ingredient_units_plural-input-"
				  id="ingredient_units_plural-input-" type="text"
				/>
			</td>
		</tr>
		<tr>
			<td>
				Quality
			</td>
			<td>
				<input name="ingredient_quality-input-"
				  id="ingredient_quality-input-" type="text"
				/>
			</td>
		</tr>
		<tr>
			<td>
				Is Required
			</td>
			<td>
				<input name="ingredient_is_required-input-"
				  id="ingredient_is_required-input-" type="text"
				/>
			</td>
		</tr>
		<tr>
			<td>
				Notes
			</td>
			<td>
				<textarea name="ingredient_notes-textarea-"
				  id="ingredient_notes-textarea-" type="text"
				></textarea>
			</td>
		</tr>
	</table>
	<button type="button" onclick="delete_ingredient(this.parentNode)">
		Remove
	</button>
